<svg width="300" height="90" viewBox="0 0 300 90" xmlns="http://www.w3.org/2000/svg">
  <!-- Fondo con gradiente sutil -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8fafc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="blueGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="0" dy="2" stdDeviation="3" flood-opacity="0.15"/>
    </filter>
  </defs>
  
  <!-- Rectángulo de fondo -->
  <rect width="300" height="90" rx="12" fill="url(#bgGradient)"/>
  
  <!-- Icono principal -->
  <g transform="translate(20, 15)" filter="url(#shadow)">
    <!-- Círculos de fondo -->
    <circle cx="30" cy="30" r="28" fill="#2563eb" opacity="0.08"/>
    <circle cx="30" cy="30" r="23" fill="#2563eb" opacity="0.12"/>
    <circle cx="30" cy="30" r="18" fill="#2563eb" opacity="0.16"/>
    
    <!-- Letra P principal -->
    <path d="M 18 10 L 18 50 L 28 50 L 28 36 L 38 36 C 44 36 48 32 48 24 C 48 16 44 10 38 10 Z M 28 20 L 34 20 C 36.5 20 38 21.5 38 24 C 38 26.5 36.5 28 34 28 L 28 28 Z" fill="url(#blueGradient)"/>
    
    <!-- Elementos de media -->
    <rect x="55" y="18" width="4" height="24" rx="2" fill="#3b82f6"/>
    <rect x="62" y="12" width="4" height="36" rx="2" fill="#60a5fa"/>
    <rect x="69" y="22" width="4" height="16" rx="2" fill="#93c5fd"/>
    <rect x="76" y="15" width="4" height="30" rx="2" fill="#dbeafe"/>
  </g>
  
  <!-- Texto principal -->
  <text x="120" y="40" font-family="Arial, sans-serif" font-size="28" font-weight="bold" fill="#1e40af">Pauta</text>
  <text x="180" y="40" font-family="Arial, sans-serif" font-size="28" font-weight="bold" fill="#2563eb">Pro</text>
  
  <!-- Tagline -->
  <text x="120" y="60" font-family="Arial, sans-serif" font-size="12" fill="#64748b" font-weight="500">Sistema de Publicidad Inteligente</text>
  
  <!-- Línea decorativa -->
  <line x1="120" y1="68" x2="220" y2="68" stroke="url(#blueGradient)" stroke-width="2" stroke-linecap="round"/>
  
  <!-- Elementos decorativos adicionales -->
  <circle cx="260" cy="25" r="3" fill="#3b82f6" opacity="0.6"/>
  <circle cx="270" cy="30" r="2" fill="#60a5fa" opacity="0.8"/>
  <circle cx="265" cy="35" r="2.5" fill="#93c5fd" opacity="0.7"/>
</svg>