{
  "name": "pautapro-api",
  "version": "2.0.0",
  "description": "API Empresarial para Integración de Sistemas de Gestión Publicitaria",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs:serve": "swagger-ui-serve --port 8080 --openapi openapi.json",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "api",
    "pautapro",
    "advertising",
    "management",
    "crm",
    "billing",
    "integration"
  ],
  "author": "PautaPro Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "@supabase/supabase-js": "^2.38.5",
    "winston": "^3.11.0",
    "swagger-ui-express": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "pdf-lib": "^1.17.1",
    "axios": "^1.6.2",
    "form-data": "^4.0.0",
    "cron": "^3.1.6",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@types/jest": "^29.5.8",
    "swagger-cli": "^4.0.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brifyai/pautapro.git"
  },
  "bugs": {
    "url": "https://github.com/brifyai/pautapro/issues"
  },
  "homepage": "https://pautapro.com",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}